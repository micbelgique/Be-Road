@model Contracts.Models.Query
@{
    ViewBag.Title = "Query";
}

<div class="query" id="query">
    <br />
    <div class="form-group">
        <label class="control-label col-md-2">Name</label>
        <div class="col-md-4">
            @Html.EditorFor(model => model.Contract.Id, new { htmlAttributes = new { @class = "form-control", placeholder = "Identifies the contract to call" } })
            @Html.ValidationMessageFor(model => model.Contract.Id, "", new { @class = "text-danger" })
        </div>
        <button type="button" class="query-rem-btn btn btn-default col-md-6"><i class="fas fa-times"></i></button>
    </div>

    <div class="form-group">
        <div class="col-md-12 col-md-offset-1">
            <h4 class="col-md-12">Mappings</h4>
            <div class="col-md-12" id="mappings">
            </div>
            <div class="col-md-10">
                <button type="button" class="mapping-add-btn btn btn-default form-control"><i class="fas fa-plus"></i></button>
            </div>
        </div>
    </div>
    <hr />
</div>


