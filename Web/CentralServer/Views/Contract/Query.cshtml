@model Contracts.Models.Query
@{
    ViewBag.Title = "Query";
}

<div class="query" id="query">
    <br />
    <div class="form-group">
        @Html.LabelFor(model => model.Contract, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            @Html.EditorFor(model => model.Contract, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Contract, "", new { @class = "text-danger" })
        </div>
        <button type="button" class="query-rem-btn btn btn-default col-md-6"><i class="fas fa-times"></i></button>
    </div>

    <div class="form-group">
        <h4 class="col-md-12">Mappings</h4>
        <div class="col-md-12" id="mappings">
        </div>
        <div class="col-md-10">
            <button type="button" class="mappings-add-btn btn btn-default form-control"><i class="fas fa-plus"></i></button>
        </div>
    </div>
    <hr />
</div>


