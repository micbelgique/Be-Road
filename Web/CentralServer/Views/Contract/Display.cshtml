@model IEnumerable<CentralServer.ViewModels.BeContractViewModel>

@{
    ViewBag.Title = "Display";
}

<h2>BeContracts</h2>

<p>
    @Html.ActionLink("Create new BeContract", "Index")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Version)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Version)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                <a href="#" class="delete-link" data-toggle="modal" data-target="#delete-modal">Delete</a>
            </td>
        </tr>
    }
</table>

@if (ViewData["Error"] != null)
{
    <div class="alert-danger" id="delete-error">Deletion error : @ViewBag.error is used by antother BeContract</div>
}

@Html.Partial("DeleteModal")

<script src="~/Scripts/ContractList/ListManager.js"></script>
