<div id="delete-modal" class="modal modal-sm fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">You are going to delete a BeContract</h4>
            </div>
            @using (Html.BeginForm("Delete", "Contract", FormMethod.Post))
            {
                <div class="modal-body form-group">
                    <p>By confirming you agree to take the responsibility in case of any problem. Nevertheless, you will not be able to delete this BeContract if it is used by another one. Are you sure you want to delete this BeContract ?</p>
                    <input id="modalValue" name="modalValue" hidden="hidden" />
                </div>
                <div class="modal-footer form-group">
                    <button type="submit" class="btn btn-danger" id="delete-confirm">Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            }
        </div>

    </div>
</div>