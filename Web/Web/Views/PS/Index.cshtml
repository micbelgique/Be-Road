@model List<Web.Models.PublicService>

@{
    ViewBag.Title = Resources.Global.Home;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-4">
            <h2>@Resources.Global.Welcome_message @ViewBag.Name !</h2>
        </div>
        <div class="col-sm-8">
            <div class="row">
            @foreach (var ps in Model)
            {
                if (Model.ToList().FindIndex(p => p.ID == ps.ID) % 3 > 0 &&
                    Model.ToList().FindIndex(p => p.ID == ps.ID) % 3 == 0)
                {
                    @Html.Raw("</div><div class='row'>")
                }
                <div class="d-inline-block public-service col-sm-4">
                    <h3 class="text-center">@Html.ActionLink(ps.Name, "Select", "PS", new { id = ps.ID }, new { @class = "ps-title" })</h3>
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => ps.Description)</dt>
                        <dd>@Html.DisplayFor(model => ps.Description)</dd>

                        <p>Technical Info</p>
                        <dt>@Html.DisplayNameFor(model => ps.DalMethod)</dt>
                        <dd>@Html.DisplayFor(model => ps.DalMethod)</dd>

                        <dt>@Html.DisplayNameFor(model => ps.Url)</dt>
                        <dd>@Html.DisplayFor(model => ps.Url)</dd>
                    </dl>
                </div>
            }
            </div>
        </div>
    </div>
</div>