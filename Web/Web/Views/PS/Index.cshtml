@model List<Web.Models.PublicService>

@{
    ViewBag.Title = Resources.Global.Home;
    var eid = ViewBag.Eid as Web.Models.EidCard;
}

<div id="homecontent">
    <section id="ps-identity">
        <a href="#" id="opener">
            <img class="fas fa-arrow-right" atl="Open" width="3" height="3" />
        </a>
        @if (eid != null)
        {
            @Html.Partial("../Eid/Details", eid)
        }
    </section>
    <section id="ps-sections">
        <div class="container" id="ps-container">
            <div class="row">
                @foreach (var ps in Model)
                {
                    <div class="col s4" data-action="@Url.Action("Select", "PS", new { id = ps.ID })">
                        <div class="card blue-grey darken-1 small public-service">
                            <div class="card-image">
                                <img src="@ps.ImageURI" width="220" height="150" />
                            </div>
                            <div class="card-content white-text">
                                <p>@Html.DisplayFor(model => ps.Description)</p>
                            </div>
                            <div class="card-action">
                                @Html.ActionLink(ps.Name, "Select", "PS", new { id = ps.ID }, new { @class = "ps-title" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>