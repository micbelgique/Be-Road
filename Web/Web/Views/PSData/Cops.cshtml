@model Web.Models.PublicServiceData.PSDCar
@{
    ViewBag.Title = "CopsData";
}

<div>
    <h4>Car</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Owner)</dt>
        <dd>
            <button type="button" class="btn btn-primary btn-sm" 
                    onclick="displayAccessInfoPopup(@Newtonsoft.Json.JsonConvert.SerializeObject(Model.Owner))"
                    @{if (Model.Owner.AccessInfos.Count == 0) { @: disabled="disabled"
                    } }>
                <span class="fa fa-search" aria-hidden="true"></span>
            </button>
            @Html.DisplayFor(model => model.Owner.Name)
            @Html.DisplayFor(model => model.Owner.AccessInfos.Count)
        </dd>


        <dt>@Html.DisplayNameFor(model => model.Brand)</dt>
        <dd>
            <button type="button" class="btn btn-primary btn-sm"
                    onclick="displayAccessInfoPopup(@Newtonsoft.Json.JsonConvert.SerializeObject(Model.Brand))"
                    @{if (Model.Brand.AccessInfos.Count == 0) { @: disabled="disabled"
                    } }>
                <span class="fa fa-search" aria-hidden="true"></span>
            </button>

            @Html.DisplayFor(model => model.Brand.Name)
            @Html.DisplayFor(model => model.Brand.AccessInfos.Count)
        </dd>

        <dt>@Html.DisplayNameFor(model => model.NumberPlate)</dt>
        <dd>
            <button type="button" class="btn btn-primary btn-sm" 
                    onclick="displayAccessInfoPopup(@Newtonsoft.Json.JsonConvert.SerializeObject(Model.NumberPlate))"
                    @{if (Model.NumberPlate.AccessInfos.Count == 0) { @: disabled="disabled"
                    } }>
                <span class="fa fa-search" aria-hidden="true"></span>
            </button>

            @Html.DisplayFor(model => model.NumberPlate.Name)
            @Html.DisplayFor(model => model.NumberPlate.AccessInfos.Count)
        </dd>
    </dl>
</div>