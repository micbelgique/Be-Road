@model PublicService.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" id="user">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Details of @Model.FirstName.Value @Model.LastName.Value</h2>
            
            @if(Model.BirthDate != null && !String.IsNullOrEmpty(Model.BirthDate.Value))
            {
                <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('Age', '@Model.BirthDate.Id')">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.BirthDate)
                <span class="Age"></span>
            </div>
            }
            
            @if(Model.Nationality != null && !String.IsNullOrEmpty(Model.Nationality.Value))
            {
                <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('Nationality', '@Model.Nationality.Id')">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.Nationality)
                <span class="Nationality"></span>
            </div>
            }
            
            @if(Model.Locality != null && !String.IsNullOrEmpty(Model.Locality.Value))
            {
                <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('Locality', '@Model.Locality.Id')">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.Locality)
                <span class="Locality"></span>
            </div>
            }

            @if(Model.PhotoUrl != null && !String.IsNullOrEmpty(Model.PhotoUrl.Value))
            {
                <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('PhotoUrl', '@Model.PhotoUrl.Id')">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.PhotoUrl)
                <span class="PhotoUrl"></span>
            </div>
            }

            @if(Model.ExtraInfo != null && !String.IsNullOrEmpty(Model.ExtraInfo.Value))
            {
                <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('ExtraInfo', '@Model.ExtraInfo.Id')">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.ExtraInfo)
                <span class="ExtraInfo"></span>
            </div>
            }

            @if(Model.EmailAddress != null && !String.IsNullOrEmpty(Model.EmailAddress.Value))
            {
                <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('EmailAddress', '@Model.EmailAddress.Id')">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.EmailAddress)
                <span class="EmailAddress"></span>
            </div>
            }
        </div>
    </div>
</div>

@Html.Partial("AccessInfo")