@model PublicService.Models.MicTrainee

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid" id="trainee">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Details of @Model.FirstName.Value</h2>
            <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('LastName', @Newtonsoft.Json.JsonConvert.SerializeObject(Model.LastName))">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.LastName)
                <span class="LastName"></span>
            </div>
            <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('Age', @Newtonsoft.Json.JsonConvert.SerializeObject(Model.Age))">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.Age)
                <span class="Age"></span>
            </div>
            <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('Nationality', @Newtonsoft.Json.JsonConvert.SerializeObject(Model.Nationality))">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.Nationality)
                <span class="Nationality"></span>
            </div>
            <div>
                <button type="button" class="btn btn-primary btn-sm"
                        onclick="displayAccessInfoPopup('Locality', @Newtonsoft.Json.JsonConvert.SerializeObject(Model.Locality))">
                    <span class="fa fa-search" aria-hidden="true"></span>
                </button>
                @Html.DisplayNameFor(model => Model.Locality)
                <span class="Locality"></span>
            </div>
        </div>
    </div>
</div>

@Html.Partial("AccessInfo")