                <h5>Access infos</h5>
                @foreach (var item in Model.NumberPlate.AccessInfos)
                 {
                <dl>
                    <dt>@Html.DisplayNameFor(model => item.Name)</dt>
                    <dd>@Html.DisplayFor(model => item.Name)</dd>
                    <dt>@Html.DisplayNameFor(model => item.Reason)</dt>
                    <dd>@Html.DisplayFor(model => item.Reason)</dd>
                    <dt>@Html.DisplayNameFor(model => item.Date)</dt>
                    <dd>@Html.DisplayFor(model => item.Date)</dd>
                </dl>
                }
