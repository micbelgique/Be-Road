@model PublicService.Models.ManageViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Manage your account</h2>
<div id="ManageContainer" class="container">
    @using (Html.BeginForm("ApplyChanges", "Account", FormMethod.Post, new { @class = "ManageForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="form-group col-md-4 col-md-offset-2">
                @Html.LabelFor(model => model.FirstName)
                <input type="text" class="form-control" name="FirstName" id="FirstName" value="@Model.FirstName" disabled="disabled" />
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.LastName)
                <input type="text" class="form-control" name="LastName" id="LastName" value="@Model.LastName" disabled="disabled" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-1 col-md-offset-2">
                @Html.LabelFor(model => model.BirthDateD)
                <input type="text" class="form-control" name="BirthDateD" id="BirthDateD" value="@(Model?.BirthDateD)" placeholder="01" />
                @Html.ValidationMessageFor(model => model.BirthDateD, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-1">
                @Html.LabelFor(model => model.BirthDateM)
                <input type="text" class="form-control" name="BirthDateM" id="BirthDateM" value="@(Model?.BirthDateM)" placeholder="01" />
                @Html.ValidationMessageFor(model => model.BirthDateM, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-1">
                @Html.LabelFor(model => model.BirthDateY)
                <input type="text" class="form-control" name="BirthDateY" id="BirthDateY" value="@(Model?.BirthDateY)" placeholder="2000" />
                @Html.ValidationMessageFor(model => model.BirthDateY, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-1">
                <label>Age</label>
                <input type="text" class="form-control" name="Age" id="Age" value="" placeholder="01" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8 col-md-offset-2">
                @Html.LabelFor(model => model.EmailAddress)
                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", placeholder = "Example : example@domain.xyz" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4 col-md-offset-2">
                @Html.LabelFor(model => model.Locality)
                @Html.TextBoxFor(model => model.Locality, new { @class = "form-control", placeholder = "Example : New York" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Nationality)
                @Html.TextBoxFor(model => model.Locality, new { @class = "form-control", placeholder = "Example : Uzbek" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8 col-md-offset-2">
                @Html.LabelFor(model => model.PhotoUrl)
                @Html.TextBoxFor(model => model.PhotoUrl, new { @class = "form-control", placeholder = "Example : www.imagehoster.xzy/my-photo" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8 col-md-offset-2">
                @Html.LabelFor(model => model.ExtraInfo)
                @Html.TextBoxFor(model => model.ExtraInfo, new { @class = "form-control", placeholder = "Example : I like blue" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8 col-md-offset-2">
                <button type="submit" id="manageBtn" class="btn btn-primary">Submit</button>
            </div>
        </div>
    }
    <div class="row">
        <div class="form-group col-md-8 col-md-offset-2">
            <h4>Delete your account</h4>
            <button type="button" class="btn btn-danger" id="deleteBtn" data-toggle="modal" data-target="#deletingModal"><strong>Delete</strong></button>
        </div>
    </div>
</div>

@Html.Partial("Delete")
